<%- include('partials/header.ejs'); %>


<div class="big-container">
    <div class="notes-container">
        <h2><%= book.title %></h2>
        <h3><%= book.author %></h3>
        <h4>Isbn</h4>
        <p class="isbn"><%= book.isbn %></p>
        <p><%= book.description %></p>
    <br/>
    <h2>Notes</h2>
    <% notes.forEach((note) => { %>
        <p><%= note.notes %></p>
    
        <% }) %>
    
    <form action="/editnotes/<%= book.id %>" method="post">
    <textarea type="text" name="mynotes" rows="8" cols="60"></textarea>
    <br/>
    <button class="submitbutton"type="submit">Submit Note</button>
    </form>  
    </div>
    </div>


