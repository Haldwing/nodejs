<%- include('partials/header.ejs'); -%>
<div class="big-container">
    <div class="sort">
        <p>Sort By: </p>
        <form action="/sort" method="post">
            <select name="sort" id="sort-option">
                <option value="title">title</option>
                <option value="date">Date</option>
                <option value="rating">Rating</option>
            </select>
            <input type="submit" value="Go">
        </form>
    </div>
    <div class="notes-container">
<% books.forEach((book) => { %>
    <div class="post-container">
     <div class="img-container">   
    <img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-L.jpg" class="bookpic">
    </div> 
    <div class="text-container">
<a href="/pages/<%= book.id %>"><h3><%= book.title %></h3></a>
<h4><%= book.author %></h4>
<p><%= book.description %></p>
<a href="/edit/<%= book.id %>">Edit post</a>
</div>
</div>
<br/>
<% }) %>
</div>
<a class="logoutbtn" href="/logout" role="button">Log Out</a>
</div>

<%- include('partials/footer.ejs'); -%>
